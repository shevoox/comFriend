@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Razor;

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline my-2 my-lg-0">
        <button type="submit" class="btn btn-link text-dark">تسجيل الخروج</button>
    </form>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">تسجيل الدخول</a>
    <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">تسجيل</a>
}
